<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.ItemEditActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item to do ..."
        android:id="@+id/itemDescription"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:height="160dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/prioritySpinner"
        android:layout_below="@+id/textView"
        android:spinnerMode="dropdown"
        android:background="#a3a3a3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/dateDialog"
        android:layout_marginTop="83dp"
        android:onClick="onDateDialogClick"
        android:layout_below="@+id/prioritySpinner"
        android:layout_toEndOf="@+id/dueDateText"
        android:paddingLeft="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Due date"
        android:id="@+id/dueDateText"
        android:textIsSelectable="false"
        android:textAlignment="center"
        android:textSize="32dp"
        android:textColor="#000000"
        android:layout_alignTop="@+id/dateDialog"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/dateDialog" />


</RelativeLayout>
